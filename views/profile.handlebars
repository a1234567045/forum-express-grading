<div class="card mb-3">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img class="img-responsive center-block" src="{{user.image}}" style="width:250px;
  height:250px;
  object-fit:cover;">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{user.name}}</h5>
        <p class="card-text">{{user.email}}</p>
        <p class="card-text">{{count user.Comments}} 已評論餐廳</p>
        <a href='/users/{{user.id}}/edit'>
          <button type="button" class="btn btn-primary">Edit</button>
        </a>
      </div>
    </div>
  </div>
</div>
<div class="card">
  <div class="card-header">
    {{count user.Comments}} 已評論餐廳
  </div>
  <div class="card-body">
    <div class="d-flex flex-wrap">
      {{#each user.Comments}}
      <a href="/restaurants/{{this.Restaurant.id}}">
        <div class="m-2">
          <img src="{{this.Restaurant.image}}" style="width:50px;height:50px;object-fit:cover;"
            class="shadow-sm rounded">
        </div>
      </a>
      {{/each}}
    </div>
  </div>
</div>